    <!--
        Added the entity Transporter.
    -->
    <changeSet id="20210514212836-1" author="jhipster">
        <createTable tableName="transporter">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="favourite_transport" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="number_of_deliveries" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="number_of_km" type="double">
                <constraints nullable="true" />
            </column>
            <column name="received_value" type="double">
                <constraints nullable="true" />
            </column>
            <column name="value_to_receive" type="double">
                <constraints nullable="true" />
            </column>
            <column name="ranking" type="double">
                <constraints nullable="true" />
            </column>
            <column name="user_info_id" type="bigint">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_transporter__user_info_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <changeSet id="20210514212836-1-relations" author="jhipster">

        <createTable tableName="rel_transporter__ride_path">
            <column name="ride_path_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="transporter_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="transporter_id, ride_path_id" tableName="rel_transporter__ride_path"/>
    </changeSet>

